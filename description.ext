respawnDelay = 30;  // Respawn delay in seconds
respawnVehicleDelay = 60;  // Vehicle respawn delay in seconds
respawnDialog = 1;  // Displays the respawn dialog ("BASE" respawn only)
respawnOnStart = -1;  // -1 = Don't respawn on start and don't run the respawn script, 0 = Don't respawn on start and run the respawn script, 1 = Respawn on start and run the respawn script
